{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@test/*": ["./__tests__/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@utils/*": ["./src/utils/*"],
      "@screens/*": ["./src/screens/*"],
      "@data/*": ["./src/data/*"],
      "@derivedComponents/*": ["./src/derivedComponents/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/.storybook/*",
    "**/assets/*",
    "**/build/*"
  ]
}
